@import 'system'

.top-menu
  display flex
  justify-content space-between
  flex-direction row
  background-color #cecfff
  align-items center
  padding 0 20px
  img
    width 100px
  .router-link-exact-active
    color #a03838
  .menu
    a
      text-decoration none
      transition .5s
      &:hover
        transition .5s
        color grey